<mvc:View controllerName="masterdetail.masterdetail.controller.master_detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m">
    <Page id="page">
    <customHeader>
      <OverflowToolbar id="_IDGenOverflowToolbar">
        <content>
          <ToolbarSpacer id="_IDGenToolbarSpacer"/>
             <Title id="_IDGenTitle" text="{i18n>title}"  />
          <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
        </content>
      </OverflowToolbar>    
    </customHeader>

    <content>
    <SplitContainer id="SplitCont" initialMaster="master" initialDetail="orderDetail">
      
      <detailPages>     
         <Page id="orderDetail" title="Order Details" >
            <Table id="orderTable" items="{/Order_Details}" >
                
                <columns>
                    <Column id="_IDGenColum0" >
                       <Text id="_IDGenText1" text="OrderID"/>
                    </Column>   

                    <Column id="_IDGenColum1" >
                       <Text id="_IDGenText2" text="ProductID"/>
                    </Column>   
                    
                    <Column id="_IDGenColum2" >
                       <Text id="_IDGenText3" text="UnitPrice"/>
                    </Column>   
                    
                    <Column id="_IDGenColum3" >
                      <Text id="_IDGenText4" text="Quantity"/>
                    </Column>   

                    <Column id="_IDGenColum4" >
                       <Text id="_IDGenText5" text="Discount"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="_IDGenColumnListItem" type="Navigation" press="onPressOrderdetail">
                    <cells>
                       <Text id="_IDGenText6" text="{OrderID}"/>
                       <Text id="_IDGenText7" text="{ProductID}"/>
                       <Text id="_IDGenText8" text="{UnitPrice}"/>
                       <Text id="_IDGenText9" text="{Quantity}"/>
                       <Text id="_IDGenText10" text="{Discount}"/>
                    </cells>                    
                    </ColumnListItem>
                </items>

            </Table>
         </Page>

         <Page showNavButton="true" navButtonPress="onProductBack" id="productDetailPage" title="Product">
          <VBox id="_IDGenVBox" >
            <f:SimpleForm id="productForm">
              <f:content>
                <Label id="_IDGenLabel" text="Product Name"/>
                <Text id="_IDGenText" text="{/ProductName}"/>

                <Label id="_IDGenLabel1" text="Supplier ID"/>
                <Text id="_IDGenText11" text="{/SupplierID}"/>

                <Label id="_IDGenLabel2" text="Quantity Per Unit"/>
                <Text id="_IDGenText12" text="{/QuantityPerUnit}"/>

                <Label id="_IDGenLabel3" text="Unit Price"/>
                <Text id="_IDGenText13" text="{/UnitPrice}"/>

                <Label id="_IDGenLabel4" text="Units On Order"/>
                <Text id="_IDGenText14" text="{/UnitsOnOrder}"/>

                <Label id="_IDGenLabel5" text="Product Name"/>
                <Text id="_IDGenText15" text="{/ProductName}"/>

              </f:content>
            </f:SimpleForm>
          </VBox>
         </Page>        

      </detailPages>

      <masterPages>
        <Page id="master" title="Orders">
          <List id="OrderList" items="{/Orders}" itemPress="onListPress" updateFinished="onUpdateFinished">
            <items>        
              <StandardListItem id="_IDGenStandardListItem" title="{OrderID}" type="Navigation"/>              
            </items>
          </List>  
        </Page>
      </masterPages>

    </SplitContainer>
    </content>
    </Page>
</mvc:View>